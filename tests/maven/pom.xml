<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.obeonetwork.m2doc</groupId>
  <artifactId>org.obeonetwork.m2doc.parent</artifactId>
  <version>4.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>M2Doc Maven Test Parent</name>

  <properties>
    <maven-repository>../../maven/repository</maven-repository>
    <maven.compiler.source>21</maven.compiler.source>
    <maven.compiler.target>21</maven.compiler.target>
    <junit-version>4.13.2</junit-version>
    <log4j-core-version>2.25.1</log4j-core-version>
    <maven-surefire-plugin-version>3.5.2</maven-surefire-plugin-version>
    <deployURL>file://${maven.multiModuleProjectDirectory}/${maven-repository}</deployURL>
  </properties>

  <repositories>
    <repository>
      <id>M2Doc Repository</id>
      <url>${deployURL}</url>
    </repository>
  </repositories>

  <modules>
    <module>org.obeonetwork.m2doc.maven.tests</module>
    <module>org.obeonetwork.m2doc.genconf.maven.tests</module>
    <module>org.obeonetwork.m2doc.html.maven.tests</module>
    <module>org.obeonetwork.m2doc.wikitext.maven.tests</module>
  </modules>

</project>
